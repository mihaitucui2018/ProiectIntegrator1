<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mihai.proiectintegrator.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/imagine_scanare"
            android:layout_width="80dp"
            android:layout_height="80dp"
            style="@style/StilPentruImagini"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/imagine_lista_produse"
            android:layout_width="80dp"
            android:layout_height="80dp"
            style="@style/StilPentruImagini"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/imagine_cont"
            android:layout_width="80dp"
            android:layout_height="80dp"
            style="@style/StilPentruImagini"/>
        <ImageView
            android:id="@+id/imagine_contact"
            android:layout_width="80dp"
            android:layout_height="80dp"
            style="@style/StilPentruImagini"/>
    </LinearLayout>
</LinearLayout>
