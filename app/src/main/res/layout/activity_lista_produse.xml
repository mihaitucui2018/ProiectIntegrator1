<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mihai.proiectintegrator.ListaProduseActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/primaryLightColor"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/cont_60dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingTop="16dp"
            android:text="Produs"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:src="@drawable/more_60dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lista_produse"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Insert fake data"
        android:id="@+id/fake_data"
        android:background="@color/primaryDarkColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="add"
        android:id="@+id/add"
        android:background="@color/primaryDarkColor"
        android:layout_margin="8dp"/>

</LinearLayout>
